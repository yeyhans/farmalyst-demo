---
import Layout from "../layouts/Layout.astro";
import ChatComponent from "../components/Chat";




---
<title>FARMIEMOS</title>
<Layout title="Dashboard">
  <!-- Contenido del Dashboard aqu铆 -->
  <div x-data="{ isMenuOpen: false }" class="flex flex-col min-h-screen bg-gray-100">
    
    <!-- Header principal -->
    <header 
      class="w-full bg-gray-800 text-white p-4 flex justify-between items-center">
      <!-- Logo y nombre de la app -->
      <a href="/" class="text-2xl font-bold">FARMIEMOS</a>

      <!-- Bot贸n de Men煤 para pantallas peque帽as -->
      <button 
        class="lg:hidden bg-gray-800 text-white p-2" 
        @click="isMenuOpen = !isMenuOpen" 
        aria-label="Toggle Menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>

      <!-- Men煤 de Navegaci贸n horizontal (visible en pantallas grandes) -->
      <nav class="hidden lg:flex space-x-6">
        <a href="/dashboard" class="hover:bg-gray-700 px-3 py-2 rounded-md">Dashboard</a>
        <a href="/profile" class="hover:bg-gray-700 px-3 py-2 rounded-md">Configuraci贸n</a>
        <a href="/chat" class="hover:bg-gray-700 px-3 py-2 rounded-md">Chat</a>
        <a href="/mastergrow" class="hover:bg-gray-700 px-3 py-2 rounded-md">Mastergrow</a>
      </nav>

      <!-- Bot贸n de cerrar sesi贸n -->
      <form action="/api/auth/signout" class="hidden lg:block">
        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-md">
          Salir
        </button>
      </form>
    </header>

    <!-- Overlay de men煤 m贸vil -->
    <div 
      x-show="isMenuOpen" 
      @click="isMenuOpen = false" 
      class="fixed inset-0 bg-black bg-opacity-50 lg:hidden" 
      x-transition:enter="transition ease-out duration-200" 
      x-transition:enter-start="opacity-0" 
      x-transition:enter-end="opacity-100" 
      x-transition:leave="transition ease-in duration-200" 
      x-transition:leave-start="opacity-100" 
      x-transition:leave-end="opacity-0">
    </div>

    <!-- Men煤 m贸vil -->
    <nav 
      x-show="isMenuOpen" 
      @click.away="isMenuOpen = false" 
      class="fixed top-0 left-0 w-64 h-full bg-gray-800 text-white p-6 z-40 transition-transform transform lg:hidden">
      <a href="/" class="text-2xl font-bold">FARMIEMOS</a>
      <a href="/dashboard" class="block px-4 py-2 rounded hover:bg-gray-700">Dashboard</a>
      <a href="/profile" class="block px-4 py-2 rounded hover:bg-gray-700">Configuraci贸n</a>
      <a href="/chat" class="block px-4 py-2 rounded hover:bg-gray-700">Chat</a>
      <a href="/mastergrow" class="block px-4 py-2 rounded hover:bg-gray-700">Mastergrow</a>
      <form action="/api/auth/signout" class="mt-6">
        <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white font-bold py-2 rounded-md">
          Salir
        </button>
      </form>
    </nav>

    <!-- rea de Contenido Principal -->
    <main class="flex-1 p-8 mt-4">

      <slot />
    </main>

<!-- Bot贸n flotante de chat -->
<button 
  id="chat-toggle" 
  class="fixed bottom-6 right-6 bg-blue-500 hover:bg-blue-600 text-white w-14 h-14 rounded-full flex items-center justify-center shadow-lg z-50">
    <span class="text-2xl"></span>
</button>

<!-- Ventana de chat -->
<div 
  id="chat-window" 
  class="fixed bottom-16 right-6 w-80 h-96 bg-white border border-gray-300 shadow-lg rounded-lg z-50 hidden transition-all">
  <header class="bg-blue-500 text-white p-4 flex justify-between items-center">
    <h2 class="text-xl font-bold">Chat</h2>
    <button id="close-chat" class="text-white">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </header>

  <div class="flex-1 overflow-y-auto">
    <ChatComponent client:visible/>
  </div>

  <form id="chat-form" class="bg-gray-100 p-4 border-t border-gray-200">
    <input 
      type="text" 
      placeholder="Escribe un mensaje..." 
      class="w-full p-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500" 
    />
  </form>
</div>

  </div>
</Layout>


<script>
document.addEventListener('DOMContentLoaded', () => {
  // З Referencias a los elementos
  const chatToggle = document.getElementById('chat-toggle'); // Bot贸n flotante
  const chatWindow = document.getElementById('chat-window'); // Ventana del chat
  const closeChatButton = document.getElementById('close-chat'); // Bot贸n de cerrar el chat

  // З L贸gica para abrir/cerrar el chat con el bot贸n flotante
  chatToggle.addEventListener('click', () => {
    if (chatWindow.classList.contains('hidden')) {
      chatWindow.classList.remove('hidden');
      chatWindow.classList.add('block');
    } else {
      chatWindow.classList.add('hidden');
      chatWindow.classList.remove('block');
    }
  });

  // З L贸gica para cerrar el chat con el bot贸n de cierre
  closeChatButton.addEventListener('click', () => {
    chatWindow.classList.add('hidden');
    chatWindow.classList.remove('block');
  });
});

</script>